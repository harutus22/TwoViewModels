<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:divider="@color/colorPrimary"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/firstImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_adb_black_24dp"
            android:layout_centerInParent="true"
           />

            <LinearLayout
                android:id="@+id/firstLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/firstImage"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/minus"
                    android:onClick="firstMinus"/>

                <TextView
                    android:id="@+id/firstNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:layout_margin="30dp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/plus"
                    android:onClick="firstPlus"/>
            </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/secondImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_adb_black_24dp"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/secondImage">

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/minus"
                android:onClick="secondMinus"/>

            <TextView
                android:id="@+id/secondNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:layout_margin="30dp"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/plus"
                android:onClick="secondPlus"/>


        </LinearLayout>
    </RelativeLayout>



</LinearLayout>